// 3D –º–∞—Ç–µ–º–∞—Ç–∏–∫–∞
typedef struct {
    float m[4][4];
} mat4_t;

typedef struct {
    float x, y, z, w;
} vec4_t;

// –ú–µ—à (—Å–µ—Ç–∫–∞)
typedef struct {
    vec3_t* vertices;
    vec3_t* normals;
    vec2_t* texcoords;
    face_t* faces;
    int vertex_count;
    int face_count;
} mesh_t;

// –¢–µ–∫—Å—Ç—É—Ä–∞
typedef struct {
    uint32_t* data;
    int width;
    int height;
} texture_t;

// –ö–æ–Ω–≤–µ–π–µ—Ä —Ä–µ–Ω–¥–µ—Ä–∏–Ω–≥–∞
void render_pipeline(render_context_t* ctx, mesh_t* mesh) {
    // 1. Vertex Shader
    for (each vertex) {
        vertex = mat4_mul_vec4(model_matrix, vertex);
        vertex = mat4_mul_vec4(view_matrix, vertex);
        vertex = mat4_mul_vec4(projection_matrix, vertex);
        // Perspective divide
        vertex.x /= vertex.w;
        vertex.y /= vertex.w;
        vertex.z /= vertex.w;
    }
    
    // 2. Rasterization
    for (each triangle) {
        rasterize_triangle(ctx, triangle);
    }
}

