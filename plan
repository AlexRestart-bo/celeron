// –î–µ—Å–∫—Ä–∏–ø—Ç–æ—Ä GDT
struct gdt_entry {
    uint16_t limit_low;
    uint16_t base_low;
    uint8_t base_middle;
    uint8_t access;
    uint8_t granularity;
    uint8_t base_high;
} __attribute__((packed));

// PCB (Process Control Block)
typedef struct {
    uint32_t esp;        // Stack pointer
    uint32_t cr3;        // Page directory
    uint32_t eip;        // Instruction pointer
    uint32_t eflags;
    uint32_t pid;
    uint8_t state;       // RUNNING, READY, BLOCKED
    char name[32];
} pcb_t;

// –ú–µ–Ω–µ–¥–∂–µ—Ä –ø–∞–º—è—Ç–∏
typedef struct {
    uint32_t total_pages;
    uint32_t free_pages;
    uint32_t* bitmap;     // Bitmap –¥–ª—è –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏—è —Å—Ç—Ä–∞–Ω–∏—Ü
} memory_manager_t;

