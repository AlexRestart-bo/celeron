// –ü—Ä–∏–º–µ—Ä: –∞—Å–∏–Ω—Ö—Ä–æ–Ω–Ω—ã–π event loop
typedef struct {
    int epoll_fd;
    struct epoll_event* events;
    int max_events;
    connection_t** connections;
} event_loop_t;

// Non-blocking I/O —Å –ø–æ–º–æ—â—å—é epoll/kqueue
void event_loop_run(event_loop_t* loop) {
    while (1) {
        int n = epoll_wait(loop->epoll_fd, loop->events, 
                          loop->max_events, -1);
        for (int i = 0; i < n; i++) {
            handle_event(loop->events[i].data.ptr);
        }
    }
}

